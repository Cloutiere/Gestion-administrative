# .env.example
#
# Ce fichier sert de modèle pour les variables d'environnement.
# Copiez-le en .env pour le développement local ou en .env.test pour les tests,
# puis remplissez les valeurs appropriées.
# NE JAMAIS COMMITTER DE FICHIERS .env CONTENANT DES SECRETS.

# -- Configuration Flask --
# Générez une clé secrète forte. Vous pouvez utiliser : python -c 'import os; print(os.urandom(24).hex())'
SECRET_KEY=""
FLASK_APP="mon_application"
FLASK_DEBUG="True" # Mettre à "False" en production

# -- Configuration de la base de données de DÉVELOPPEMENT --
# Utilisé lorsque APP_ENV n'est pas "production" ou "test"
APP_ENV="development"
DEV_PGHOST="localhost"
DEV_PGDATABASE="gestion_taches_dev"
DEV_PGUSER="votre_utilisateur_dev"
DEV_PGPASSWORD="votre_mot_de_passe_dev"
DEV_PGPORT="5432"

# -- Configuration de la base de données de TEST --
# Utilisé par pytest lors du chargement de .env.test
TEST_PGHOST="localhost"
TEST_PGDATABASE="gestion_taches_test"
TEST_PGUSER="votre_utilisateur_test"
TEST_PGPASSWORD="votre_mot_de_passe_test"
TEST_PGPORT="5432"